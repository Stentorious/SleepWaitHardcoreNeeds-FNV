<rect name="SWM_HardcoreNeeds">

	<visible> <copy src="io()" trait="_Setting+Hardcore" /> </visible>
	<locus> 1 </locus>
	<x> <copy src="sibling(SWM_HoursChosen)" trait="x" /> </x>
	<y>
		<copy src="sibling(SWM_HoursChosen)" trait="height" />
		<div> 3 </div>
		<add src="sibling(SWM_HoursChosen)" trait="y" />
		<add src="sibling(SWM_HoursChosen)" trait="height" />
	</y>
	<font> <copy src="sibling(SWM_HoursChosen)" trait="font" /> </font>

	<_time_main> 0 </_time_main>
	<_time>
		<copy src="sibling(SWM_Scrollbar)" trait="_current_value" />
		<add> 1 </add>
		<onlyifnot src="me()" trait="_time_main" />
		<add src="me()" trait="_time_main" />
		<sub>
			<copy src="sibling(SWM_Scrollbar)" trait="_current_value" />
			<add> 1 </add>
			<onlyif src="me()" trait="_time_main" />
		</sub>
	</_time>

	<rect name="H2O">
		<include src="Stentorious\SleepWaitHardcoreNeeds\SleepWaitMenu\SWM_Template.xml" />
		<x>
			<copy src="sibling(FOD)" trait="x" />
			<sub>
				<copy src="io()" trait="_SWHC+ySIWidth" />
				<mul>
					<copy> 0 </copy>
					<add>
						<copy> 5.5 </copy>
						<onlyifnot src="io()" trait="_SWHC+MAPMO" />
					</add>
					<add>
						<copy> 4.2 </copy>
						<onlyif src="io()" trait="_SWHC+MAPMO" />
					</add>
				</mul>
				<add>
					<copy> 30 </copy>
					<onlyif>
						<copy src="io()" trait="_Menu+UIMod" />
						<eq> 1 </eq>
					</onlyif>
				</add>
			</sub>
		</x>
		<_value>
			<copy> 120 </copy>
			<div>
				<copy src="io()" trait="_PlrStat+H2ORate" />
				<max> 1 </max>
			</div>
			<floor></floor>
			<mul src="parent()" trait="_time" />
			<add src="io()" trait="_SWHC+H2OTemp" />
			<min src="io()" trait="_PlrStat+H2O5" />
		</_value>
		<_stage_1> <copy src="io()" trait="_PlrStat+H2O1" /> </_stage_1>
		<_stage_2> <copy src="io()" trait="_PlrStat+H2O2" /> </_stage_2>
		<_stage_3> <copy src="io()" trait="_PlrStat+H2O3" /> </_stage_3>
		<_stage_4> <copy src="io()" trait="_PlrStat+H2O4" /> </_stage_4>
		<_stage_5> <copy src="io()" trait="_PlrStat+H2O5" /> </_stage_5>
		<_label> &SStatsH20Abbrev;&sKBColon; </_label>
		<_icon> MAPMO\water.dds </_icon>
	</rect>

	<text name="FOD">
		<include src="Stentorious\SleepWaitHardcoreNeeds\SleepWaitMenu\SWM_Template.xml" />
		<x>
			<copy> 0 </copy>
			<sub>
				<copy src="child(Label)" trait="width" />
				<mul> 1.138 </mul>
				<onlyifnot src="io()" trait="_SWHC+MAPMO" />
			</sub>
			<sub>
				<copy src="child(Icon)" trait="width" />
				<mul> 1.3 </mul>
				<add>
					<copy> 12 </copy>
					<onlyif>
						<copy src="io()" trait="_Menu+UIMod" />
						<eq> 1 </eq>
					</onlyif>
				</add>
				<onlyif src="io()" trait="_SWHC+MAPMO" />
			</sub>
		</x>
		<_value>
			<copy> 120 </copy>
			<div>
				<copy src="io()" trait="_PlrStat+FODRate" />
				<max> 1 </max>
			</div>
			<floor></floor>
			<mul src="parent()" trait="_time" />
			<add src="io()" trait="_SWHC+FODTemp" />
			<min src="io()" trait="_PlrStat+FOD5" />
		</_value>
		<_stage_1> <copy src="io()" trait="_PlrStat+FOD1" /> </_stage_1>
		<_stage_2> <copy src="io()" trait="_PlrStat+FOD2" /> </_stage_2>
		<_stage_3> <copy src="io()" trait="_PlrStat+FOD3" /> </_stage_3>
		<_stage_4> <copy src="io()" trait="_PlrStat+FOD4" /> </_stage_4>
		<_stage_5> <copy src="io()" trait="_PlrStat+FOD5" /> </_stage_5>
		<_label> &sStatsFODAbbrev;&sKBColon; </_label>
		<_icon> MAPMO\food.dds </_icon>
	</text>

	<text name="SLP">
		<include src="Stentorious\SleepWaitHardcoreNeeds\SleepWaitMenu\SWM_Template.xml" />
		<x>
			<copy src="sibling(FOD)" trait="x" />
			<add>
				<copy src="io()" trait="_SWHC+ySIWidth" />
				<mul>
					<copy> 5.5 </copy>
					<onlyifnot src="io()" trait="_SWHC+MAPMO" />
					<add>
						<copy> 4.2 </copy>
						<onlyif src="io()" trait="_SWHC+MAPMO" />
					</add>
				</mul>
				<add>
					<copy> 30 </copy>
					<onlyif>
						<copy src="io()" trait="_Menu+UIMod" />
						<eq> 1 </eq>
					</onlyif>
				</add>
			</add>
		</x>
		<_value>
			<copy src="io()" trait="_PlrStat+SLPRateCalc" />
			<onlyifnot src="io()" trait="_SWHC+State" />
			<sub>
				<copy src="io()" trait="_PlrStat+SLPRatePos" />
				<floor></floor>
				<onlyif src="io()" trait="_SWHC+State" />
			</sub>
			<mul src="parent()" trait="_time" />
			<add src="io()" trait="_SWHC+SLPTemp" />
			<add>
				<copy src="io()" trait="_PlrStat+SLPRateCalc" />
				<sub>
					<copy src="io()" trait="_PlrStat+SLPRateCalc" />
					<onlyifnot src="parent()" trait="_time" />
				</sub>
				<onlyif src="io()" trait="_SWHC+State" />
			</add>
			<max src="io()" trait="_PlrStat+SLPRateCalc" />
			<min src="io()" trait="_PlrStat+SLP5" />
		</_value>
		<_stage_1> <copy src="io()" trait="_PlrStat+SLP1" /> </_stage_1>
		<_stage_2> <copy src="io()" trait="_PlrStat+SLP2" /> </_stage_2>
		<_stage_3> <copy src="io()" trait="_PlrStat+SLP3" /> </_stage_3>
		<_stage_4> <copy src="io()" trait="_PlrStat+SLP4" /> </_stage_4>
		<_stage_5> <copy src="io()" trait="_PlrStat+SLP5" /> </_stage_5>
		<_label> &sStatsSLPAbbrev;&sKBColon; </_label>
		<_icon> MAPMO\sleep.dds </_icon>
	</text>

</rect>